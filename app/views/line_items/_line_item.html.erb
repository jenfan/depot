<% notr ||= "no" %>
<% if line_item.product %>
	<% if notr == "no" %>
		<% if line_item == @current_item %>
			<tr class = "current_item" id = "line_item<%= line_item.id %>">
		<% else %>
			<tr id = "line_item<%= line_item.id %>">
		<% end 
	end %>
		 <td class="del">
		 	<%= link_to '', remove_item_line_item_path(del: "1" , id: line_item), remote: true %>
		 </td>
		 <td class="photo">
		 	<a href="/product/1856"><img src="http://img.ikra-ikra.ru/attach/6655/w60h60" alt=""></a>
		 </td>
		<td class="title">
			<%= line_item.product.title %>
		</td>
		 <td class="price item_price"><%= line_item.product.price %>р &times;</td>
		 <td id = "count<%= line_item.id %>" ><%= line_item.quantity %></td>
		<td class="count_td">
			<div class="count">
				<%= link_to image_tag("plus.gif", alt: '+'), remove_item_line_item_path(id: line_item), remote: true %><br /><BR>
				<%= image_tag("minus.gif") %></a>
			</div>
			
			<span class="prices"><%= line_item.total_price %>р</span>
		</td>
	<% if notr == "no" %>
			</tr>
	<%  end 
end %>