<% if @current_item.quantity != 0  %>
$('#line_item<%= @current_item.id %>').html("<%=j render @current_item, template: 'line_item', locals: {notr: 'yes'} %>"); 
<% else %>
$('#line_item<%= @current_item.id %>').html(""); 
<% end %>
$('.current_item').css({'background-color':'#fee'}).animate({'background-color':'#fff'}, 1000);