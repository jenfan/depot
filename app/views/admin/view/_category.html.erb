<tr id="category<%= category.id %>">
     <%= form_for category, url: {action: "category_update"}, remote: true do |f| %>
        
        <td>
            <%= f.label :id %><%= f.text_field :id, size: 40 %>
        </td>
        <td>
        	<%= f.label :menu_id %>
            <%= f.select :menu_id, @menu, prompt: '...'  %>
        </td>
        <td>
            <%= f.label :name %><%= f.text_field :name, size: 40 %>
        </td>
        <td>
            <%= f.label :url_name %><%= f.text_field :url_name, size: 40 %>
        </td>
        <td><%= f.submit "save",  class:"btn btn-primary" %>
        <%= f.submit "x",  class:"btn btn-danger" %></td>
         
     <% end %>
</tr>
   