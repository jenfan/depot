<div class="jumbotron">
  <h2><b>Чудо-фильтр</b></h2>
 
    <%= form_tag("/admin/products", method: "get") do %>
	<% for i in 0..@buf.count-1 %>
        <% if  @buf[i][:checked]=="0" %>	
            <div class="col-xs-6 col-sm-3"><%= check_box_tag @buf[i][:name], "1", false%> <%= @buf[i][:name] %></div>
        <% else %>
            <div class="col-xs-6 col-sm-3"><%= check_box_tag @buf[i][:name], "1", true%> <%= @buf[i][:name] %></div>
        <% end %>    
    <% end %>
    
    <div ><%= text_field_tag(:orderlink, @orderlink) %></div>
	<div ><%= submit_tag("Готово", id: "subbtn", class: "btn btn-primary btn-lg") %></div>
	<% end %>
</div>

<table border="1">
  <tr>
    <% for i in 0..@buf.count-1 %>
        <% if  @buf[i][:checked]=="1" %>    
            <th><%= @buf[i][:name]%></th>
        <% end %>    
    <% end %>
  </tr>

<% @products.each do |products| %>

  <tr>
    <% for i in 0..@buf.count-1 %>
        <% if  @buf[i][:checked]=="1" %> 
            <td><%= products[@buf[i][:name]] %></td>
        <% end %>   
    <% end %>
  </tr>
<% end %>
</table>

