

     <div class="one_product">
        <div id="best_seller" style="padding:0; position:absolute; z-index:3;width=50px" align="left">
            <%= image_tag ("ribbon_best_seller.png"), size: "50x65" %>
        </div>
         <%= image_tag (product.image_url), size: "200x200" %><BR>
         <%= link_to product.title, products_path %>
         <p><%=  %> id=<%= product.id %></p>

         <% if product.subcategory %> 
         <h6>Kатегория"<%= product.category.name %>"</h6>
         <% end %>

         <% if product.subcategory %> 
         <h6>Подкатегория"<%= product.subcategory.name %>"</h6>
         <% end %>

         <%= sanitize(product.description) %>
         <div class="price_line">
             <span class="price"><%= product.price %>р</span>
             <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
         </div>
     </div>

   