
     <div class="one_product border">
        <% if (1..100).to_a.shuffle.first > 70 %>
        <div id="best_seller" style="padding:0; position:absolute; z-index:3;width=50px" align="left">
            <%= image_tag ("ribbon_best_seller.png"), size: "50x65" %>
        </div>
        <% end %>
        <%= link_to "#{product.title} (#{product.id})", product_path(product), class: "title_item" %>
         <%= image_tag (product.image_url), size: "170x170" %><BR>
         
         <div class="price_line">
                <p class="price"><%= product.price %> р</p>
             <%= button_to "В корзину", line_items_path(product_id: product), remote: true, class: "btn btn-sm btn-primary"  %>
         </div>
         
         <div class="left">
             <% if product.subcategory %> 
             <small>Kатегория"<%= product.category.name %>"</small><br>
             <% end %>

             <% if !product.subcategory.nil? %> 
             <small>Подкатегория"<%= product.subcategory.name %>"</small><br>
             <% end %>
         </div>
     </div>

   